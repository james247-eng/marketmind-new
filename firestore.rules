rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - only users can access their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Businesses collection - only owner can access
    match /businesses/{businessId} {
      allow read, write: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Content collection - only owner can access
    match /content/{contentId} {
      allow read, write: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Social accounts collection - only owner
    match /socialAccounts/{accountId} {
      allow read, write: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Subscriptions collection - only owner
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Usage tracking - only owner
    match /usage/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Payments collection - only owner
    match /payments/{paymentId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
